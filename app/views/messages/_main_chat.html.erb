<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      <%= @room.name %>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <%= link_to "チャットを終了する", room_path(@room), method: :delete %>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
<div class="form-input">
  <%= f.text_area :content, class: 'form-message', placeholder: '100文字以内' ,maxlength:"100" ,size:"30x10"  %>
  <label class="form-image">
    <span class="image-file">写真</span>
    <%= f.file_field :image, class: 'hidden' %>
  </label>
</div>
<%= f.submit '送信', class: 'form-submit' %>
<% end %>

<div class="messages">
  <%= render partial: 'message', collection: @messages %>
</div>
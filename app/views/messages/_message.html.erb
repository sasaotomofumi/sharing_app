<div class="message">
  <div class="upper-message">
    <div class="message-user">
      <%= message.user.name %>
    </div>
    <div class="message-date">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="lower-message">
    <div class="message-content">
      <%= message.content %>
    </div>
    <% if current_user.id == message.user.id %>
    <div class="message-btn">
      <div class="message-btn-left">
        <%= link_to "編集", room_message_path(message.room.id, message.id) %>
      </div>
      <div class="message-btn-right">
        <%= link_to "削除", room_message_path(message.room.id, message.id), method: :delete %>
      </div>
    </div>
    <% end %>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>